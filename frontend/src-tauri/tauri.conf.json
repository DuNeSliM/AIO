{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "AIO Game Library",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true,
        "execute": true,
        "sidecar": false,
        "scope": [
          {
            "name": "browser",
            "cmd": "cmd",
            "args": [
              "/C",
              "start",
              {
                "validator": ".*"
              }
            ]
          },
          {
            "name": "explorer",
            "cmd": "explorer",
            "args": true
          }
        ]
      },
      "protocol": {
        "asset": true,
        "assetScope": ["**"]
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["http://localhost:8080/**"]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.aio.gamelibrary",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "externalBin": [],
      "deeplink": {
        "protocol": "aio",
        "schemes": ["aio"]
      },
      "windows": {
        "webviewInstallMode": {
          "type": "downloadBootstrapper"
        },
        "wix": {
          "language": "en-US"
        }
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "AIO Game Library - Test",
        "width": 1280,
        "height": 800
      }
    ]
  }
}
